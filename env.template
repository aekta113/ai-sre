# AI SRE Environment Configuration Template
# Copy this file to .env and update with your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
MCP_SERVER_PORT=8080
AGENT_LOG_LEVEL=INFO
AGENT_WORKDIR=/app/work
COMMAND_TIMEOUT=60
DRY_RUN=false

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================
KUBE_CONTEXT=
KUBE_NAMESPACE=default
KUBECONFIG_PATH=/root/.kube/config

# =============================================================================
# GIT REPOSITORY CONFIGURATION
# =============================================================================
# Kubernetes GitOps repository URL (SSH or HTTPS)
K8S_GIT_REPO=git@github.com:your-org/your-k8s-repo.git
# Or use HTTPS: https://github.com/your-org/your-k8s-repo.git

# Default branch to checkout
K8S_GIT_BRANCH=main

# Local repository path
K8S_REPO_PATH=/app/k8s-repo

# Git user configuration (optional)
GITHUB_USER=AI-SRE
GITHUB_EMAIL=ai-sre@your-org.com

# GitHub token for HTTPS authentication (optional)
# If using SSH, this is not needed
GITHUB_TOKEN=

# =============================================================================
# FLUX CONFIGURATION
# =============================================================================
FLUX_NAMESPACE=flux-system

# =============================================================================
# SECRETS MANAGEMENT
# =============================================================================
SOPS_ENABLED=true
AGE_KEY_PATH=/app/secrets/age-key.txt
VAULT_ENABLED=false
SEALED_SECRETS_ENABLED=false

# =============================================================================
# MONITORING ENDPOINTS
# =============================================================================
PROMETHEUS_URL=http://prometheus:9090
ALERTMANAGER_URL=http://alertmanager:9093
GRAFANA_URL=http://grafana:3000
KUMA_URL=http://kuma:5681
JAEGER_URL=http://jaeger:16686
LOKI_URL=http://loki:3100
TEMPO_URL=http://tempo:3200

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
REQUIRE_AUTH=false
ALLOWED_COMMANDS=
BLOCKED_COMMANDS=rm,dd,mkfs,fdisk,shutdown,reboot,halt

# =============================================================================
# TOOL CONFIGURATION
# =============================================================================
TOOLS_ENABLED_CATEGORIES=all
TOOLS_DISABLED=tcpdump,lsof
TOOLS_ENABLED=

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
MAX_CONCURRENT_OPERATIONS=10
ENABLE_CACHING=false
CACHE_TTL=300
